@model AppointmentDetailsViewModel   //This indicates that the Razor template is bound to the AppointmentDetailsViewModel model, which contains the user's past and upcoming appointments.

<h2>Appointment Details</h2>   <!-- Page title -->
 <!-- Past Appointments section -->
<div>
    <h3>Past Appointments</h3> <!-- Past appointments heading -->
    @if (Model.PastAppointments.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Doctor</th>
                    <th>Clinic</th>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <!-- List past appointments in a loop -->
                @foreach (var appointment in Model.PastAppointments)  
                {
                    <tr>
                        <td>@appointment.Doctor.Name</td>
                        <td>@appointment.Clinic.Name</td>
                        <td>@appointment.AppointmentDate.ToShortDateString()</td>
                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No past appointments.</p>  <!-- If there are no past appointments, show this message -->
    }
</div>

<div>
    <h3>Upcoming Appointments</h3>
    @if (Model.UpcomingAppointments.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Doctor</th>
                    <th>Clinic</th>
                    <th>Date</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                <!-- List upcoming appointments in a loop -->
                @foreach (var appointment in Model.UpcomingAppointments)  
                {
                    <tr>
                        <td>@appointment.Doctor.Name</td>
                        <td>@appointment.Clinic.Name</td>
                        <td>@appointment.AppointmentDate.ToShortDateString()</td>
                        <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No upcoming appointments.</p>
    }
</div>