<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
         body {
            margin: 0;
            padding: 0;
        }
        footer {
            position: fixed; /*Footer remains fixed at the bottom*/
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px 0;
            border-top: 1px solid #ddd;
        }
        main {
            margin-bottom: 60px; /* Leaves space to separate content above the footer. Prevents the content above the footer from overlapping the footer. */
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="ms-5 navbar-brand position-relative me-5" href="/Home/Index">
                    <img src="/HospitalApp/hospital_logo.png" class="d-inline-block align-top position-absolute" style="width: 115px; height: 115px; left: -90px; top: -32px;" alt="Logo">
                    KOLPA
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item me-5">
                            <a class="nav-link" href="/Appointment/AppointmentDetails">AppointmentDetails</a>
                        </li>
                        <li class="nav-item me-5">
                            <a class="nav-link" href="/Clinic/Index">Clinics</a>
                        </li>

                        @if(User.Identity.IsAuthenticated){
                            if(User.IsInRole("Admin")){
                        <li class="nav-item me-5 dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    ADD
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/Admin/AddDoctor">Doctor</a></li>
                                    <li><a class="dropdown-item" href="/Admin/AddClinic">Clinic</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item me-5 dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    UPDATE
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/Appointment/EditDoctors">Doctor</a></li>
                                    <li><a class="dropdown-item" href="/Appointment/EditClinics">Clinic</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="nav-item me-5 dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    DELETE
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/Appointment/DeleteDoctors">Doctor</a></li>
                                    <li><a class="dropdown-item" href="/Appointment/DeleteClinics">Clinic</a></li>
                                </ul>
                            </div>
                        </li>
                            }   
                        }
                        <li class="nav-item">
                            @if (SignInManager.IsSignedIn(User))
                            {      
                                <a class="nav-link" href="/Account/Logout">Logout</a>         
                            }
                            else
                            {     
                                <a class="nav-link" href="/Account/Login">Login</a>     
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <small><i>2024 Fall, SWE203 Web Programming Course</i></small><br><br>
            <small><i>B221202086 Muhammed DEMİRÖRS</i></small><br><br>
            <small><i>B221202085 Arda ALİŞAN</i></small>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js" integrity="sha512-nnzkI2u2Dy6HMnzMIkh7CPd1KX445z38XIu4jG1jGw7x5tSL3VBjE44dY4ihMU1ijAQV930SPM12cCFrB18sVw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>

</html>
